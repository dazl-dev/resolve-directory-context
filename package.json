{
  "name": "@wixc3/resolve-directory-context",
  "description": "Helpers to get information about single/multi-package contexts",
  "version": "4.0.0",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "pretest": "npm run typecheck",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha \"./test/**/*.{spec,nodespec}.ts\"",
    "test:browser": "mocha-play \"./test/**/*.spec.ts\"",
    "lint": "eslint . -f codeframe",
    "prepack": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "minimatch": "^9.0.3",
    "type-fest": "^4.8.1"
  },
  "devDependencies": {
    "@file-services/memory": "^8.3.3",
    "@file-services/path": "^8.3.3",
    "@playwright/browser-chromium": "^1.40.0",
    "@ts-tools/node": "^5.0.2",
    "@ts-tools/webpack-loader": "^5.0.2",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.4",
    "@types/node": "18",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "mocha-play": "^7.0.1",
    "rimraf": "^5.0.5",
    "typescript": "~5.2.2",
    "webpack": "^5.89.0"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "packages",
    "directory",
    "workspace",
    "npm",
    "yarn"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Wix.com",
  "license": "MIT",
  "repository": "git@github.com:wixplosives/resolve-directory-context.git"
}
